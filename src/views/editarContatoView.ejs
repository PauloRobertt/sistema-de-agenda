    <%-include('includes/header.ejs')%>
    <section class="container">
        <h1>Editar contato</h1>
            <form class="form-contato">
                <div class="container-input">
                    <label>Nome</label>
                    <input class='input' type="text" name="nome" value=<%=editContato.nome%> placeholder="Digite seu nome" >
                </div>
                <div class="container-input">
                    <label>Sobrenome</label>
                    <input class='input' type="text" name="sobrenome" value=<%=editContato.sobrenome%>  placeholder="Digite seu sobrenome">
                </div>
                <div class="container-input">
                    <label>E-mail</label>
                    <input class='input' type="email" name="e-mail" value=<%=editContato.email%>  placeholder="Digite seu e-mail">
                </div>
                <div class="container-input">
                    <label>Telefone</label>
                    <input class='input' type="tel" name="telefone" value=<%=editContato.telefone%>  placeholder="Digite seu telefone">
                </div>
                <button class="button-submit" type="submit">Editar Contato</button>
            </form>     
    </section>

    <script>
        document.querySelector('.button-submit').addEventListener('click', function (event) {
            handleSubmit(event);
        })
        
        const handleSubmit = (e) => {
            e.preventDefault();
            envioFormulario();
        }

        const envioFormulario = () => {
            const form = document.querySelector('.form-contato');
            const formData = new FormData(form);
            const contatoID = <%- JSON.stringify(editContato.id)%>;
            
            const dataSave = {
                nome: formData.get('nome'),
                sobrenome: formData.get('sobrenome'),
                email: formData.get('e-mail'),
                telefone: formData.get('telefone')
            }

            editContato(dataSave, contatoID)
        }

        const editContato = (contato, id) => {
            fetch(`http://localhost:3000/contato/${id}`, {
                method: 'PUT',
                headers: {
                    'Accept': 'application/json',
                    'Content-type': 'application/json'
                },
                body: JSON.stringify(contato, id)
            })
            .then((res) => res.json())
            .then((data) => {
                console.log(data);
            })
            .catch((err) => {
                console.log(err)
            })
            window.location.replace(`http://localhost:3000`);
        }
    </script>
    <%-include('includes/footer.ejs')%>