    <%-include('includes/header.ejs')%>
    <section class="container">
        <h1>Editar contato</h1>
            <form action="/contato/<%= editContato._id %>?_method=PUT" method="post" class="form-contato">
                <%-include('includes/messages.ejs')%>
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="container-input">
                    <label>Nome</label>
                    <input class='input' type="text" name="nome" value=<%=editContato.nome%> placeholder="Digite seu nome" >
                </div>
                <div class="container-input">
                    <label>Sobrenome</label>
                    <input class='input' type="text" name="sobrenome" value=<%=editContato.sobrenome%>  placeholder="Digite seu sobrenome">
                </div>
                <div class="container-input">
                    <label>E-mail</label>
                    <input class='input' type="email" name="email" value=<%=editContato.email%>  placeholder="exemple@email.com">
                </div>
                <div class="container-input">
                    <label>Telefone</label>
                    <input class='input' id="telefone" maxlength="14" type="tel" name="telefone" value=<%=editContato.telefone%> placeholder="(xx) xxxxx-xxxx">
                </div>
                <button type="submit" class="button-submit">Editar Contato</button>
            </form>     
    </section>
        <script>
        const input = document.getElementById("telefone");

        input.addEventListener("input", function () {
        let value = input.value.replace(/\D/g, "");

        if (value.length > 0 && value.length <= 2) {
            value = value.replace(/(\d{0})(\d+)/, "($1$2");
        } else if (value.length > 2 && value.length <= 7) {
            value = value.replace(/(\d{0})(\d{2})(\d+)/, "($1$2)$3");
        } else if (value.length > 7) {
            value = value.replace(/(\d{0})(\d{2})(\d{5})(\d+)/, "($1$2)$3-$4");
        }

        input.value = value;
        });
    </script>
    <%-include('includes/footer.ejs')%>
